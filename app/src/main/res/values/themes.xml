<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HotMovies" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorContainer">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryInverted</item>
        <item name="colorPrimary">@color/colorPrimaryInverted</item>
        <item name="colorSecondary">@color/colorPrimaryInverted</item>
        <item name="colorOnSurfaceVariant">@color/colorPrimaryInverted</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryInverted</item>
        <item name="colorPrimaryDark">@color/colorPrimaryInverted</item>
        <item name="colorAccent">@color/colorPrimaryInverted</item>
        <item name="colorOutline">@color/colorPrimaryInverted</item>
        <item name="colorOutlineVariant">@color/colorPrimaryInverted</item>
        <item name="colorControlNormal">@color/colorPrimaryInverted</item>
        <item name="android:colorControlActivated">@color/colorPrimaryInverted</item>
        <item name="android:colorControlNormal">@color/colorPrimaryInverted</item>
        <item name="colorOnBackground">@color/colorPrimaryInverted</item>
        <item name="colorOnError">@color/colorPrimaryInverted</item>
        <item name="colorOnContainer">@color/colorPrimaryInverted</item>
        <item name="colorOnSurface">@color/colorPrimaryInverted</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="textInputStyle">@style/Widget.Design.TextInputLayout.Custom</item>
        <item name="editTextStyle">@style/Widget.Design.TextInputEditText.Custom</item>
        <item name="materialButtonStyle">@style/Widget.Design.Button.Custom</item>
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.Material3.MaterialAlertDialog.Custom
        </item>
    </style>

    <style name="ThemeOverlay.Material3.MaterialAlertDialog.Custom" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/colorPrimaryInverted</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="scrimBackground">@color/colorPrimaryInverted</item>
    </style>

    <style name="Widget.Design.TextInputLayout.Custom" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@null</item>
        <item name="editTextStyle">@style/Widget.Design.TextInputEditText.Custom</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="cursorColor">@color/colorPrimaryInverted</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>

        <item name="hintTextColor">@color/colorPrimaryInverted</item>
        <item name="textOutlineColor">@color/colorPrimaryInverted</item>
        <item name="counterTextAppearance">
            @style/Widget.Design.TextInputLayout.TextAppearance.Custom
        </item>
        <item name="counterOverflowTextAppearance">
            @style/Widget.Design.TextInputLayout.TextAppearance.Custom
        </item>
        <item name="errorTextAppearance">
            @style/Widget.Design.TextInputLayout.Error.TextAppearance.Custom
        </item>
        <item name="helperTextTextAppearance">
            @style/Widget.Design.TextInputLayout.TextAppearance.Custom
        </item>
        <item name="hintTextAppearance">
            @style/Widget.Design.TextInputLayout.Hint.TextAppearance.Custom
        </item>
        <item name="placeholderTextAppearance">
            @style/Widget.Design.TextInputLayout.TextAppearance.Custom
        </item>
    </style>


    <style name="Widget.Design.TextInputEditText.Custom" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">
            @style/Widget.Design.TextInputLayout.TextAppearance.Custom
        </item>
        <item name="android:textColor">@color/colorPrimaryInverted</item>
        <item name="android:textColorHint">@color/colorPrimaryInverted</item>
    </style>

    <style name="Widget.Design.TextInputLayout.TextAppearance.Custom" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryInverted</item>
    </style>

    <style name="Widget.Design.TextInputLayout.Hint.TextAppearance.Custom" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimaryInverted</item>
    </style>

    <style name="Widget.Design.TextInputLayout.Error.TextAppearance.Custom" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryInverted</item>
    </style>

    <style name="Widget.Design.Button.Custom" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.RatingBar.Small.custom" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:scaleX">1.0</item>
        <item name="android:scaleY">1.0</item>
    </style>

    <style name="Theme.HotMovies" parent="Base.Theme.HotMovies" />
</resources>
