<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:interpolator="@android:interpolator/fast_out_slow_in"
    android:transitionOrdering="together">
    <changeBounds
        android:interpolator="@android:interpolator/fast_out_extra_slow_in"
        android:reparent="true"
        android:reparentWithOverlay="false">
        <pathMotion
            class="com.example.hotmovies.presentation.shared.transitions.TransitionMaterialArcMotion"
            tools:ignore="Instantiatable" />
        <targets>
            <target android:targetId="@id/avatar" />
            <target android:targetId="@id/info" />
            <target android:targetId="@id/login" />
        </targets>
    </changeBounds>
    <changeTransform
        android:reparent="true"
        android:reparentWithOverlay="false">
        <targets>
            <target android:targetId="@id/avatar" />
            <target android:targetId="@id/info" />
            <target android:targetId="@id/login" />
        </targets>
    </changeTransform>
    <changeClipBounds
        android:reparent="true"
        android:reparentWithOverlay="false">
        <targets>
            <target android:targetId="@id/avatar" />
            <target android:targetId="@id/info" />
            <target android:targetId="@id/login" />
        </targets>
    </changeClipBounds>
    <changeImageTransform
        android:reparent="true"
        android:reparentWithOverlay="false">
        <targets>
            <target android:targetId="@id/avatar" />
            <target android:targetId="@id/info" />
            <target android:targetId="@id/login" />
        </targets>
    </changeImageTransform>
    <changeScroll
        android:reparent="true"
        android:reparentWithOverlay="false">
        <targets>
            <target android:targetId="@id/avatar" />
            <target android:targetId="@id/info" />
            <target android:targetId="@id/login" />
        </targets>
    </changeScroll>
    <transition
        class="com.example.hotmovies.presentation.shared.transitions.ButtonCornerTransition"
        tools:ignore="Instantiatable" />
</transitionSet>